{
  "artifacts_root": "artifacts",
  "budget": {
    "hypothesis_every": 2,
    "max_steps": 10,
    "min_improvement": 0.01,
    "patience": 3,
    "plateau_eps": 0.003,
    "plateau_window": 5,
    "stable_steps": 2,
    "target_gain": null
  },
  "execution": {
    "allow_fallback": true,
    "mode": "restart_per_step"
  },
  "memory": {
    "allow_negative_rules": true,
    "half_life_days": 30.0,
    "path": "memory/agent_memory.json",
    "top_k": 5
  },
  "metrics": {
    "allow_missing_metrics": false,
    "parse_mode": "json_stdout_v1"
  },
  "microbench": {
    "allow_fallback": true,
    "collect_topology": false,
    "command_template": [],
    "env": {},
    "mode": "dry",
    "parse_schema": "cclinsight_v1",
    "repetitions": 1,
    "timeout_sec": 900
  },
  "numeric_search": {
    "allow_fallback": true,
    "concurrency": 4,
    "max_candidates": 8,
    "mode": "predict_only",
    "short_eval_steps": 50,
    "short_eval_timeout_sec": 300
  },
  "parameter_space": {
    "NCCL_ALGO": {
      "choices": [
        "TREE",
        "RING",
        "COLLNET"
      ],
      "default": "RING",
      "description": "Collective algorithm selection.",
      "kind": "enum",
      "max_value": null,
      "min_value": null,
      "name": "NCCL_ALGO",
      "step": null
    },
    "NCCL_BUFFSIZE": {
      "choices": null,
      "default": 4194304,
      "description": "Buffer size in bytes.",
      "kind": "int",
      "max_value": 67108864,
      "min_value": 1048576,
      "name": "NCCL_BUFFSIZE",
      "step": 1048576
    },
    "NCCL_IB_QPS_PER_CONNECTION": {
      "choices": null,
      "default": 1,
      "description": "QPs per IB connection.",
      "kind": "int",
      "max_value": 8,
      "min_value": 1,
      "name": "NCCL_IB_QPS_PER_CONNECTION",
      "step": 1
    },
    "NCCL_MAX_NCHANNELS": {
      "choices": null,
      "default": 8,
      "description": "Maximum channels for collectives.",
      "kind": "int",
      "max_value": 32,
      "min_value": 1,
      "name": "NCCL_MAX_NCHANNELS",
      "step": 1
    },
    "NCCL_MIN_NCHANNELS": {
      "choices": null,
      "default": 4,
      "description": "Minimum channels for collectives.",
      "kind": "int",
      "max_value": 16,
      "min_value": 1,
      "name": "NCCL_MIN_NCHANNELS",
      "step": 1
    },
    "NCCL_NET_GDR_LEVEL": {
      "choices": null,
      "default": 1,
      "description": "GPUDirect RDMA level.",
      "kind": "int",
      "max_value": 2,
      "min_value": 0,
      "name": "NCCL_NET_GDR_LEVEL",
      "step": 1
    },
    "NCCL_NSOCKS_PERTHREAD": {
      "choices": null,
      "default": 2,
      "description": "Sockets per thread.",
      "kind": "int",
      "max_value": 8,
      "min_value": 1,
      "name": "NCCL_NSOCKS_PERTHREAD",
      "step": 1
    },
    "NCCL_NTHREADS": {
      "choices": null,
      "default": 256,
      "description": "Threads per channel.",
      "kind": "int",
      "max_value": 512,
      "min_value": 64,
      "name": "NCCL_NTHREADS",
      "step": 64
    },
    "NCCL_P2P_LEVEL": {
      "choices": [
        "NVL",
        "PXB",
        "SYS"
      ],
      "default": "SYS",
      "description": "P2P level selection.",
      "kind": "enum",
      "max_value": null,
      "min_value": null,
      "name": "NCCL_P2P_LEVEL",
      "step": null
    },
    "NCCL_PROTO": {
      "choices": [
        "LL",
        "LL128",
        "SIMPLE"
      ],
      "default": "SIMPLE",
      "description": "Protocol selection for collectives.",
      "kind": "enum",
      "max_value": null,
      "min_value": null,
      "name": "NCCL_PROTO",
      "step": null
    },
    "NCCL_SHM_DISABLE": {
      "choices": null,
      "default": false,
      "description": "Disable shared memory transport.",
      "kind": "bool",
      "max_value": null,
      "min_value": null,
      "name": "NCCL_SHM_DISABLE",
      "step": null
    },
    "NCCL_SOCKET_NTHREADS": {
      "choices": null,
      "default": 2,
      "description": "Socket threads.",
      "kind": "int",
      "max_value": 8,
      "min_value": 1,
      "name": "NCCL_SOCKET_NTHREADS",
      "step": 1
    }
  },
  "rag": {
    "allow_fallback": true,
    "docs_paths": [
      "doc/Design",
      "doc/Knowledge",
      "README",
      "workload"
    ],
    "index_path": "rag_index",
    "mode": "jaccard",
    "rebuild_index": false,
    "top_k": 5
  },
  "safety": {
    "allow_fallback": true,
    "known_bad_combos_path": null,
    "max_channels_safe": 32,
    "max_risk_score": 0.7,
    "min_buffsize_safe": 1048576,
    "risk_threshold": 0.7,
    "safe_envelope": {}
  },
  "seed": 7,
  "sla_max_iteration_time": null,
  "surrogate": {
    "dataset_path": "memory/datasets",
    "min_records": 8,
    "model_dir": "memory/models",
    "model_type": "rf",
    "refit_every_steps": 5,
    "retrain_every": 5
  }
}
